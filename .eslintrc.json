{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "README.md",
        "tsconfig.json",
        ".eslintrc.json",
        "package.json",
        "package-lock.json",
        "public/*",
        "**.css",
        "**.json",
        "**.html"
    ],
    "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "react/jsx-no-bind": "off",
        "react/jsx-filename-extension": "off",
        "react/react-in-jsx-scope": "off",
        "no-undef": "off",
        "no-unused-vars": "off"
    }
}   
